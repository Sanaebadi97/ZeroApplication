<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="PrimaryDarkText">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SecondaryDarkText">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="LightText">
        <item name="android:textColor">@color/icons</item>
    </style>


    <style name="PrimaryDarkText.XLargeText" parent="PrimaryDarkText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryDarkText.LargeText" parent="PrimaryDarkText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PrimaryDarkText.MediumText" parent="PrimaryDarkText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SecondaryDarkText.Small" parent="SecondaryDarkText">
        <item name="android:textSize">10sp</item>
    </style>

</resources>
